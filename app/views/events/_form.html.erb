<% if @event.errors.any? %>
<div class="alert alert-danger">
  <h5><%= t('common.errors')%></h5>
  <ul>
    <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<%= form_with model: @event, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :tag %><br>
    <%= form.text_field :tag %>
  </p>
  <p>
    <%= form.label  'scheduled_date (yyyy-mm-dd)' %><br>
    <%= form.text_field :scheduled_date %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>