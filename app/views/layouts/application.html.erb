<!DOCTYPE html>
<html>
  <head>
    <title>ProvectusInternTask</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= favicon_link_tag 'icons8-icons8-96.png' %>
  </head>

  <body>
		  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
		  <!-- <a class="navbar-brand" href="#">Navbar w/ text</a> -->
		  <%= link_to (image_tag ('icons8-icons8-96.png'), size: '58x58'), root_path %>
		  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
		    <span class="navbar-toggler-icon"></span>
		  </button>
		  <div class="collapse navbar-collapse" id="navbarText">
		    <form class="form-inline">
    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>	
  			<ul class="navbar-nav mr-auto">
  				<li class="nav-item">
		        <!-- <a class="nav-link" href="#">Features</a> -->
		        <%= link_to 'Events', events_path , class: 'nav-link' %>
		      </li>	
  			</ul>
		    <ul class="navbar-nav ml-auto">

		      <!-- <li class="nav-item active">

		        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
		      </li> -->
		      <% unless user_signed_in? %>
		      	
		      
		      <li class="nav-item">
		      	<%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
		        <!-- <a class="nav-link" href="#">Log In</a> -->
		      </li>
		      <li class="nav-item">
		      	<%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
		        <!-- <a class="nav-link" href="#">Sign Up</a> -->
		      </li>
		      <% else %>
		      <li class="nav-item">

		      	<%= link_to 'Sign out', destroy_user_session_path, data: {method: 'delete', confirm: 'Are you sure?'}, class: 'nav-link disabled' %>
		      	 
		        <!-- <a class="nav-link" href="#">Sign Out</a> -->
		      </li>
		      <li class="nav-item">

		      	<%= link_to current_user.email, root_path, class: 'nav-link' %>	
		      	 
		        <!-- <a class="nav-link" href="#">Sign Out</a> -->
		      </li>
		      
		      <% end %>
		    </ul>
		    
		  </div>
		</nav>	
  <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

    <%= yield %>
    <footer class="footer">
    	Place for content in footer
    	<script src="../../assets/js/ie10-viewport-bug-workaround.js"></script>
    </footer>
  </div>  	
  	   
  </body>
</html>
